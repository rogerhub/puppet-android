# soft global overrides

not set -q ANDROID_HOME; \
  and test -d "<%= scope.lookupvar 'android::config::sdk_dir' %>"; \
  and set -x ANDROID_HOME "<%= scope.lookupvar 'android::config::sdk_dir' %>"

not set -q ANDROID_NDK_HOME; \
  and test -d "<%= scope.lookupvar 'android::config::ndk_dir' %>"; \
  and set -x ANDROID_NDK_HOME "<%= scope.lookupvar 'android::config::ndk_dir' %>"
